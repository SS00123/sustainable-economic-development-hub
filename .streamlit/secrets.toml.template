# Streamlit Secrets Template
# Copy this file to .streamlit/secrets.toml and fill in your values
# DO NOT commit secrets.toml to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
[database]
# SQLite is default; for PostgreSQL, set these:
# type = "postgresql"
# host = "localhost"
# port = 5432
# name = "analytics_hub"
# user = "your_username"
# password = "your_password"

# =============================================================================
# AUTHENTICATION
# =============================================================================
[auth]
# Simple password authentication (recommended for Streamlit Cloud)
password = "change_this_secure_password"

# For multiple users, uncomment and use this format:
# [[auth.users]]
# username = "admin"
# password = "admin_secure_password"
#
# [[auth.users]]
# username = "viewer"
# password = "viewer_secure_password"

# =============================================================================
# LLM INTEGRATION (Optional)
# =============================================================================
[openai]
# api_key = "sk-..."

[anthropic]
# api_key = "sk-ant-..."

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
[redis]
# url = "redis://localhost:6379/0"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
[features]
# enable_ai_insights = false
# enable_export_pdf = true
# enable_map_visualization = true
# debug_mode = false

# =============================================================================
# TENANT CONFIGURATION
# =============================================================================
